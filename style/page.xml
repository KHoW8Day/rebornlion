<xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
  <xsl:import href="wrap.xml"/>
  <xsl:output method="xml" indent="yes"/>
  <xsl:template match="@*|node()">
    <xsl:copy>
      <xsl:apply-templates select="@*|node()"/>
    </xsl:copy>
  </xsl:template>
  <xsl:template match="paragraph">
    <xsl:call-template name="wrap">
      <xsl:with-param name="mode">
	<xsl:text>2</xsl:text>
      </xsl:with-param>
      <xsl:with-param name="grouping-element">
	<xsl:text>page</xsl:text>
      </xsl:with-param>
      <xsl:with-param name="target-element">
	<xsl:text>paragraph</xsl:text>
      </xsl:with-param>
      <xsl:with-param name="item-element">
	<xsl:text>line</xsl:text>
      </xsl:with-param>
      <xsl:with-param name="target-index">
	<xsl:text>1</xsl:text>
      </xsl:with-param>
      <xsl:with-param name="item-index">
	<xsl:text>1</xsl:text>
      </xsl:with-param>
      <xsl:with-param name="group-size">
	<xsl:text>50</xsl:text>
      </xsl:with-param>
      <xsl:with-param name="buffer">
	  <xsl:text>0</xsl:text>
      </xsl:with-param>
    </xsl:call-template>
  </xsl:template>
</xsl:stylesheet>